<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="kb.keyboard.warrior.dao.MemoDao">

<select id="todoView" resultType="kb.keyboard.warrior.dto.TodoListDTO">
    SELECT * FROM todolist WHERE userno = #{param1} AND isdone = 0 ORDER BY todoid
</select>

<select id="memoView" resultType="kb.keyboard.warrior.dto.MyMemoDTO">
    SELECT * FROM mymemo WHERE userno = #{param1} ORDER BY memoid
</select>

</mapper>