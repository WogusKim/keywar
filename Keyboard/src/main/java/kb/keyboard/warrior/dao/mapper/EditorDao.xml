<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kb.keyboard.warrior.dao.EditorDao">
	<!-- Insert operation -->
    <insert id="insertEditor" parameterType="kb.keyboard.warrior.dto.EditorDTO">
        INSERT INTO editor (title, content_json, created_at)
        VALUES (#{title}, #{contentJson}, NOW())
    </insert>

    <!-- Select by ID -->
    <select id="selectEditorById" parameterType="int" resultType="kb.keyboard.warrior.dto.EditorDTO">
        SELECT id, title, content_json, created_at
        FROM editor
        WHERE id = #{id}
    </select>
	
</mapper>